<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BestPractices.Views.SearchViewPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="clr-namespace:BestPractices"
    BindingContext="{Static app:ViewModelLocator.SearchViewModel}">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label
                Margin="0,20,0,0"
                FontSize="Title"
                HorizontalOptions="Center">
                Search movie
            </Label>
            <BoxView
                Margin="0,10,0,25"
                HeightRequest="1"
                Color="LightGray" />
            <Entry Margin="20" Text="{Binding SearchInput, Mode=TwoWay}" />
            <Button
                Command="{Binding SearchCommand}"
                HorizontalOptions="Center"
                Text="Search"
                WidthRequest="150" />
            <Button
                Command="{Binding ClearCommand}"
                HorizontalOptions="Center"
                Text="Clear"
                WidthRequest="150" />
            <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand">
                <Button Command="{Binding GoToTrendingCommand}" Text="Trending" />
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>